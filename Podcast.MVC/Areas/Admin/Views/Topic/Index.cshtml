
  @model List<TopicViewModel>
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
       
        <div class="row">
            <div class="col-md-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">Recent Purchases</p>
                        <div class="table-responsive">
                            <table id="recent-purchases-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>CoverUrl</th>
                                        <th>images</th>
                                        <th>Action</th> 

                                    </tr> 
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.CoverUrl</td>
                                            <td>
                                                <img src="~/images/topics/@item.CoverUrl" alt="Topic Image" style="width: 100px; height: auto;" />
                                            </td>
                                            <td>
                                                <form asp-action="Delete" asp-controller="Topic" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </td> 
                                            <td>
                                                <form asp-action="Update" asp-controller="Topic" method="get">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger">update</button>
                                                </form>
                                            </td> 
                                        </tr>
                                    }
                                </tbody>


                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <a asp-controller="Topic" asp-action="Create" class="btn btn-success">create</a>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
        </div>
    </footer>
    <!-- partial -->
</div>
<!-- main-panel ends -->
    </div>